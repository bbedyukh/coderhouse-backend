<div class="container" style="padding: 2rem;">
  <div class="row">
    <div class="col-sm-12">
      <div style="display:flex; align-items: center; justify-content:space-between;">
        <h1>Products</h1>
        <input class="btn btn-primary" type="button" onclick="location.href='/'" value="Upload a product" />
      </div>
      <div class="mt-5" style="display: flex; justify-content: space-between; flex-wrap: wrap;">
        <% for(product of products) { %>
          <div style="padding: 1rem;">
            <div class="card" style="width: 15rem;">
              <img src=<%=product.thumbnail%> class="card-img-top" alt=<%=product.thumbnail%>>
                <div class="card-body">
                  <h5 class="card-title">
                    <%= product.title %>
                  </h5>
                  <p class="card-text">$<%= product.price %>
                  </p>
                </div>
            </div>
          </div>
          <% } %>
      </div>
    </div>
  </div>
</div>