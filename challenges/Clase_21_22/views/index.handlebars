<div class="container p-5">
  <div class="row">
    <div class="col-sm-12 col-md-4 p-5" style="background-color: rgb(247, 247, 247);">
      <h1 class="text-center">Centro de mensajes</h1>
      <h6 class="text-center">CompresiÃ³n: <span id="percentage">0%</span></h6>

      <form id="messages-center">
        <div class=" mt-3">
          <label for="email" class="form-label">Email address</label>
          <input type="email" class="form-control" id="email" placeholder="name@example.com">
        </div>

        <div class="mt-3">
          <label for="firstName" class="form-label">First name</label>
          <input type="text" class="form-control" id="firstName" placeholder="Bogdan">
        </div>
        <div class="mt-3">
          <label for="lastName" class="form-label">Last name</label>
          <input type="text" class="form-control" id="lastName" placeholder="Bedyukh">
        </div>

        <div class="mt-3">
          <label for="age" class="form-label">Age</label>
          <input type="number" class="form-control" id="age" placeholder="26">
        </div>

        <div class="mt-3">
          <label for="alias" class="form-label">Alias</label>
          <input type="text" class="form-control" id="alias" placeholder="bbedyukh">
        </div>

        <div class="mt-3">
          <label for="avatar" class="form-label">Avatar</label>
          <input type="text" class="form-control" id="avatar" placeholder="http://google.com/image.jpg">
        </div>

        <div class="mt-3">
          <label for="message" class="form-label">Message</label>
          <input type="text" class="form-control" id="message" placeholder="Hello world!">
        </div>
        
        <div class="mt-3" style="display: flex; justify-content: right; align-items: center;">
          <button type="submit" class="btn btn-primary">Send</button>
        </div>

      </form>
    </div>

    <div class="col-sm-12 col-md-7 offset-md-1 mt-3 mt-md-0 p-5" style="background-color: rgb(247, 247, 247);">
      <div class="mt-3" id="chats"></div>
    </div>
  </div>
</div>