<div class="container" style="padding: 2rem;">
  <div class="col-sm-12 col-md-8 offset-md-2 mt-5" style="padding: 2rem; background-color: rgb(247, 247, 247);">
    <h1 class="text-center">Centro de mensajes</h1>

    <div class="mt-3">
      <label for="email" class="form-label">Email address</label>
      <input type="email" class="form-control" id="email" placeholder="name@example.com">
    </div>
    <div class="mt-3">
      <label for="message" class="form-label">Message</label>
      <input type="message" class="form-control" id="message">
    </div>
    
    <div class="mt-3" style="display: flex; justify-content: right; align-items: center;">
      <button id="sendChatButton" class="btn btn-primary">Send</button>
    </div>

    <div class="mt-3" id="chats"></div>

  </div>
</div>